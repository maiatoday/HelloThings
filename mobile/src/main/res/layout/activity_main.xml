<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.maiatoday.hellothings.MainActivity">


    <ImageView
        android:id="@+id/greenLed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/led_off"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="247dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/redLed"
        app:layout_constraintHorizontal_bias="0.5"
        android:padding="@dimen/grid1"
        app:layout_constraintStart_toStartOf="@+id/redLed"/>

    <ImageView
        android:id="@+id/redLed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/led_off"
        tools:layout_editor_absoluteY="119dp"
        tools:layout_editor_absoluteX="132dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/greenLed"
        app:layout_constraintVertical_chainStyle="packed"
        android:padding="@dimen/grid1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>
